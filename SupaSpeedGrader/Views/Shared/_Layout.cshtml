<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @ViewData["ClassName"]</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#21314d">
        <div class="container" >
            <div class="navbar-header" style=" color:white; width:100%" >
                <div style="float:left; width:80%">
                    <h1 style=" color:white">Quick Quiz Grader</h1>
                </div>
                <div style=" float:left; width:10%;">
                    <form action="../Home/Index"> <input type="image" src="https://image.flaticon.com/icons/png/512/61/61972.png" alt="HOME" height="40" width="40" /> </form>
                </div>
                <div style=" float:left; width:10%;">
                    <form action="../Home/Help"> <input type="image" src="https://cdn3.iconfinder.com/data/icons/line/36/question-512.png" alt="HELP" height="40" width="40" /> </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content" style=" width:100%">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("Scripts", required: false)
    <style>
        .footer{
            position: fixed;
            left: 0;
            bottom: 0;
            color: black;
            width:100%;
            text-align: center;
        }
    </style>

    <div class="footer">
        <p> 2018 - Colorado School of Mines: Computer Science Field Session Project: Quick Quiz Grader</p>
    </div>
    
</body> 




</html>
