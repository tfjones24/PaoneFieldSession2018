@{
    ViewData["Title"] = "Movie List";


    List<string> sections = new List<string>();
    sections.Add("A");
    sections.Add("B");
    sections.Add("C");
    List<string> quizzes = new List<string>();
    quizzes.Add("Apple");
    quizzes.Add("Banana");
    quizzes.Add("Cucumber");
    List<string> questions = new List<string>();
    questions.Add("Alpha");
    questions.Add("Bravo");
    questions.Add("Charlie");
    Dictionary<string, List<string>> quizdata = new Dictionary<string, List<string>>();


    /* this needs to be better coded when we actually pull in data to match questions to quizzes*/


    for (int i = 0; i < quizzes.Count; i++)
    {
        quizdata.Add(quizzes[i], questions);
    }


}

<body>
    <p></p>
    <div>
        <div style="float:left; width: 50%">
            <div>
                <h2>Section</h2>



                <form>
                    <script language="JavaScript">
                        function toggle(source) {
                            checkboxes = document.getElementsByName('foo');
                            for (var i = 0, n = checkboxes.length; i < n; i++) {
                                checkboxes[i].checked = source.checked;
                            }
                        }
                    </script>
                    <input checked="checked" onClick="toggle(this)" type="checkbox" id="allsections" name="section" value="all">
                    <label for="allsections">Select All</label>

                    @{ for (int i = 0; i < sections.Count; i++)
                        {
                         <br />
                            <input type="checkbox" checked="checked" id="section" name="foo" value=@sections[i]>
                            <label for="section">@sections[i]</label>
                        }
                    }
                </form>
            </div>
            <div>
                <h2>Quiz</h2>
                <form>
                    <select id="quiz" onchange="quizFunction()">
                                <option value="" selected="selected"></option>
                        @{
                            for (int i = 0; i < quizzes.Count; i++)
                            {
                                <option value=@quizzes[i]>@quizzes[i]</option>
                            }
                        }
                    </select>
                    <p id="demo"></p>
                </form>
            </div>
            <div>
                <h2>Question</h2>
                <form>
                    <select>
                        @{
                            for (int i = 0; i < questions.Count; i++)
                            {
                                <option value=@questions[i]>@questions[i]</option>
                            }
                        }
                    </select>
                </form>
            </div>
            <p></p>
            <form action="../Home/Grade"> <input type="image" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRHfNSX7YyLf4h1XAMiFADq4jJt8c9orN9zvvbb-IQp_aF3maXV-A" alt="launch" height="40" width="40" /> </form>
        </div>
        <div style="float:left; width: 50%">
            <h2>Sort By</h2>
            <form>
                <input checked="checked" name="filter" type="radio" value="Section" /> Section <br />
                <input name="filter" type="radio" value="Groups" /> Groups <br />
                <input name="filter" type="radio" value="Students" /> Students <br />
            </form>
            <p></p>
        </div>
    </div>
    <script>
        function quizFunction() {
            var x = document.getElementById("quiz").value;
            if (x != "") {
                document.getElementById("demo").innerHTML = "You selected: " + x;
            }
        }
    </script>

</body>
